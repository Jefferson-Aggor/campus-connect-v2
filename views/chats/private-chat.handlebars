<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Private Chat Room</title>
</head>

<body>
    <div class="bg-dark">
        <div class="grid-2" style="height: 100vh;">
            <div class="" style="background-color: black;">
                <div class="mx-4">
                    <div class="chats">
                        <div id="msg-Container " class="message-container">
                            <div class="mx-3 date" id="date"></div>
                        </div>
                        <div class="input px-3" id="input">
                            <div class="display-flex">
                                <input type="text" class="my-input" id="msg-input" name="msg"
                                    placeholder="Enter message" required>
                                <div class="mt-2">
                                    <label for="file" class="btn btn-dark" id="file-label"> File</label>
                                    <input type="file" name="choose-file" id="file">
                                </div>
                                <div class="">
                                    <button class="btn btn-dark" id="msg-send">Send</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <img src="/img/bg-2.png" alt="">
        </div>
    </div>




    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/private-chat.js"></script>
</body>

</html>